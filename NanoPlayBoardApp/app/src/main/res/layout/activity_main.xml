<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/textview_potentiometer_label"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Potentiometer"/>

    <TextView
        android:id="@+id/textview_ldr_label"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_alignRight="@+id/textview_potentiometer_label"
        android:text="LDR"/>

    <tr.xip.markview.MarkView
        android:id="@+id/mark_potentiometer"
        android:layout_width="156dp"
        android:layout_height="156dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="36dp"
        android:layout_marginTop="36dp"
        android:layout_below="@id/textview_potentiometer_label"
        app:mv_mark="0"
        app:mv_max="1023"
        app:mv_ringWidth="12dp"
        app:mv_strokeWidth="12dp"
        app:mv_textSize="48sp" />

    <tr.xip.markview.MarkView
        android:id="@+id/mark_ldr"
        android:layout_width="156dp"
        android:layout_height="156dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="36dp"
        android:layout_marginTop="36dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/textview_ldr_label"
        app:mv_mark="0"
        app:mv_max="1023"
        app:mv_ringWidth="12dp"
        app:mv_strokeWidth="12dp"
        app:mv_textSize="48sp" />


